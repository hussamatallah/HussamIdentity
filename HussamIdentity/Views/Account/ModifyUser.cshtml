@model List<UserRoleViewModel>
@{
    ViewData["Title"] = "ModifyUser";
}

<h1>ModifyUser</h1>
<form method="post" asp-action="ModifyUser" asp-controller="Account">
<div class="card">
    <div class="card-header"> this is  user in role</div>

    <div class="card-body">

            @for (int i = 0; i < Model.Count; i++)
            {
                @Html.HiddenFor(m => m[i].UserId)
                @Html.HiddenFor(m => m[i].UserName)

                 <input asp-for="@Model[i].IsSelected" /> @Model[i].UserName <br />

   

            }



    </div>


    <div class="card-footer"></div>
        <input type="submit" value="Save" class="btn btn-success" />
        <a asp-action="RolesList" asp-controller="Account" class="btn bt-warning"> cansle </a>
    



</div>
</form>